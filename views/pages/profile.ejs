<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>โปรไฟล์ - La Bye</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/components/scrollbar.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Prompt:wght@300;400;500;600;700&display=swap">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar">
        <div class="container nav-content">
            <a href="/" class="nav-logo">La Bye</a>
            <div class="nav-menu">
                <a href="/" class="nav-link">
                    <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
                    <span>หน้าแรก</span>
                </a>
                <a href="/profile" class="nav-link active">
                    <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                    <span>โปรไฟล์</span>
                </a>
                <div class="nav-user">
                    <button class="nav-user-btn" onclick="this.parentElement.classList.toggle('open')">
                        <% if (user.avatar) { %>
                            <img src="<%= user.avatar %>" alt="" class="nav-avatar">
                        <% } else { %>
                            <div class="nav-avatar nav-avatar-default"><%= (user.displayName || user.username).charAt(0) %></div>
                        <% } %>
                        <span class="nav-username"><%= user.displayName || user.username %></span>
                        <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6"/></svg>
                    </button>
                    <div class="nav-dropdown">
                        <a href="/profile">
                            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                            โปรไฟล์ของฉัน
                        </a>
                        <% if (user.email === 'phomphat385@gmail.com') { %>
                            <a href="/manage">
                                <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
                                จัดการระบบ
                            </a>
                        <% } %>
                        <div class="nav-dropdown-divider"></div>
                        <a href="/logout">
                            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
                            ออกจากระบบ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="feed-container">

            <!-- Profile Header -->
            <div class="card profile-card">
                <div class="profile-header">
                    <div class="profile-avatar-wrapper">
                        <% if (profileUser.avatar) { %>
                            <img src="<%= profileUser.avatar %>" alt="" class="avatar avatar-xl" id="profileAvatarImg">
                        <% } else { %>
                            <div class="avatar avatar-xl avatar-default" id="profileAvatarImg"><%= (profileUser.displayName || profileUser.username).charAt(0) %></div>
                        <% } %>
                    </div>
                    <div class="profile-info">
                        <h1 class="profile-name"><%= profileUser.displayName || profileUser.username %></h1>
                        <p class="profile-username">@<%= profileUser.username %></p>
                        <% if (profileUser.bio) { %>
                            <p class="profile-bio"><%= profileUser.bio %></p>
                        <% } %>
                        <p class="profile-joined">สมาชิกตั้งแต่ <%= new Date(profileUser.created_at).toLocaleDateString('th-TH', { month: 'long', year: 'numeric' }) %></p>
                    </div>
                </div>
                <button class="btn btn-outline btn-sm" onclick="openSettings()">แก้ไขโปรไฟล์</button>
            </div>

            <!-- My Posts -->
            <h2 class="section-label">โพสต์ของฉัน</h2>
            <% if (posts && posts.length > 0) { %>
                <% posts.forEach(function(post) { %>
                <div class="card post-card" data-id="<%= post._id %>">
                    <div class="post-header">
                        <div class="post-author">
                            <% if (post.isAnonymous) { %>
                                <div class="avatar avatar-md avatar-anonymous">?</div>
                            <% } else if (post.author && post.author.avatar) { %>
                                <img src="<%= post.author.avatar %>" alt="" class="avatar avatar-md">
                            <% } else { %>
                                <div class="avatar avatar-md avatar-default"><%= post.author ? (post.author.displayName || post.author.username).charAt(0) : '?' %></div>
                            <% } %>
                            <div class="post-author-info">
                                <span class="post-author-name"><%= post.isAnonymous ? 'ไม่ระบุตัวตน' : (post.author ? (post.author.displayName || post.author.username) : 'ผู้ใช้ที่ถูกลบ') %></span>
                                <span class="post-time"><%= new Date(post.created_at).toLocaleDateString('th-TH', { day: 'numeric', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></span>
                            </div>
                        </div>
                        <button class="post-menu-btn" onclick="deletePost('<%= post._id %>')">
                            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                        </button>
                    </div>
                    <% if (post.content) { %>
                        <div class="post-content"><%= post.content %></div>
                    <% } %>
                    <% if (post.image) { %>
                        <div class="post-image"><img src="<%= post.image %>" alt="" loading="lazy"></div>
                    <% } %>
                    <div class="post-stats">
                        <span class="post-stat"><%= post.likes || 0 %> ถูกใจ</span>
                        <span class="post-stat"><%= post.commentCount || 0 %> ความคิดเห็น</span>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <div class="card empty-feed">
                    <p>ยังไม่มีโพสต์</p>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Settings Modal -->
    <div class="modal" id="settingsModal">
        <div class="modal-overlay" onclick="closeSettings()"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2>แก้ไขโปรไฟล์</h2>
                <button class="modal-close" onclick="closeSettings()">
                    <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6L6 18"/><path d="M6 6l12 12"/></svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="settings-avatar-section">
                    <div class="settings-avatar-preview">
                        <% if (profileUser.avatar) { %>
                            <img src="<%= profileUser.avatar %>" alt="" class="avatar avatar-xl" id="settingsAvatarPreview">
                        <% } else { %>
                            <div class="avatar avatar-xl avatar-default" id="settingsAvatarPreview"><%= (profileUser.displayName || profileUser.username).charAt(0) %></div>
                        <% } %>
                    </div>
                    <label class="btn btn-outline btn-sm">
                        เปลี่ยนรูปโปรไฟล์
                        <input type="file" accept="image/*" id="avatarInput" onchange="previewAvatar(this)" style="display: none;">
                    </label>
                </div>
                <div class="form-group">
                    <label for="settingsDisplayName">ชื่อที่แสดง</label>
                    <input type="text" id="settingsDisplayName" value="<%= profileUser.displayName || profileUser.username %>" placeholder="ชื่อที่แสดง">
                </div>
                <div class="form-group">
                    <label for="settingsBio">แนะนำตัว</label>
                    <textarea id="settingsBio" placeholder="เขียนเกี่ยวกับตัวคุณ..." rows="3"><%= profileUser.bio || '' %></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline" onclick="closeSettings()">ยกเลิก</button>
                <button class="btn btn-primary" onclick="saveSettings()">บันทึก</button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('click', function(e) {
            document.querySelectorAll('.nav-user').forEach(function(el) {
                if (!el.contains(e.target)) el.classList.remove('open');
            });
        });

        function openSettings() {
            document.getElementById('settingsModal').classList.add('open');
            document.body.style.overflow = 'hidden';
        }

        function closeSettings() {
            document.getElementById('settingsModal').classList.remove('open');
            document.body.style.overflow = '';
        }

        var avatarBase64 = '';

        function previewAvatar(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    avatarBase64 = e.target.result;
                    var preview = document.getElementById('settingsAvatarPreview');
                    if (preview.tagName === 'IMG') {
                        preview.src = avatarBase64;
                    } else {
                        var img = document.createElement('img');
                        img.src = avatarBase64;
                        img.alt = '';
                        img.className = 'avatar avatar-xl';
                        img.id = 'settingsAvatarPreview';
                        preview.parentElement.replaceChild(img, preview);
                    }
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function saveSettings() {
            var displayName = document.getElementById('settingsDisplayName').value.trim();
            var bio = document.getElementById('settingsBio').value.trim();

            var body = { displayName: displayName, bio: bio };
            if (avatarBase64) body.avatar = avatarBase64;

            fetch('/profile/update', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(body)
            })
            .then(function(res) { return res.json(); })
            .then(function(data) {
                if (data.success) window.location.reload();
                else alert(data.error || 'เกิดข้อผิดพลาด');
            })
            .catch(function() { alert('เกิดข้อผิดพลาด'); });
        }

        function deletePost(postId) {
            if (!confirm('ลบโพสต์นี้?')) return;
            fetch('/post/' + postId + '/delete', { method: 'POST', headers: { 'Content-Type': 'application/json' } })
            .then(function(res) { return res.json(); })
            .then(function(data) {
                if (data.success) {
                    var el = document.querySelector('.post-card[data-id="' + postId + '"]');
                    if (el) el.remove();
                }
            });
        }
    </script>

</body>
</html>
